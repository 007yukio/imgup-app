<h1 class="favorite-top">Show</h1>
<div class="box1-blogs-index">
  <strong>Image:</strong>
  <p><%= image_tag @blog.image %></p>
  <p>Title: <%= @blog.name %></p>
  <p>Memo: <%= @blog.content %></p>

  <% unless @blog.user_id == current_user.id %>
    <% if @favorite.present? %>
      <%= link_to 'remove favorite', favorite_path(id: @favorite.id), method: :delete %>
    <% else %>
      <%= link_to 'favorite', favorites_path(blog_id: @blog.id), method: :post %>
    <% end %>
  <% end %>
  <%= link_to "back", blogs_path %>
</div>
<br>
