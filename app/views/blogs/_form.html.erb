<h1>Blogs#_form</h1>
<%= form_with(model: @blog, local: true ,url: confirm_blogs_path ) do |form| %>
  <% if @blog.errors.any? %>
    <div id="error_explanation">
      <h2><%= @blog.errors.count %>件のエラーがあります。</h2>
      <ul>
        <% @blog.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= @blog.image %>
    <%= form.label :image %>
    <p><%= image_tag(@blog.image.url) if @blog.image.url %></p>
    <%= form.file_field :image, id: :feed_image %>

  </div>

  <div class="blog_title">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>
  
  <div class="blog_title">
    <%= form.label :content %>
    <%= form.text_field :content %>
  </div>
  <br>
  <%= form.submit %>
<% end %>

<%= link_to "ブログ一覧画面にもどる", blogs_path %>
